            "part_visibility": [
                {
                    "*saddle*": "query.is_saddled"
                },
                {
                    "SaddleMouthLine": "query.is_saddled && query.has_rider"
                },
                {
                    "SaddleMouthLineR": "query.is_saddled && query.has_rider"
                },
                {
                    "Bag*": "query.is_chested"
